<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="bottom"
    android:padding="16dp"
    android:background="@drawable/headerbkg"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_home_24"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/firstname_retrive_from_db_for_saved_preference_during_login_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APNA"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "

            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/lastname_name_retrive_from_db_for_saved_preference_during_login_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="GHAR"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/email_for_saved_preference_at_login_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Stop Home Solution!"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>