<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="3dp">
    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="140dp"
        app:cardCornerRadius="14dp"
        android:elevation="5dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFFFF">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/buyRent_imageViewRent"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/buyRent_textViewIdRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:visibility="gone"/>
            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/buyRent_textViewBS_TypeRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Bunglow:"/>
                <TextView
                    android:id="@+id/buyRent_textViewLandmarkRent"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Adajan" />
            </LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/buyRent_textViewPriceRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:text="10000" />
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/buyRent_textViewBS_ForRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="RENT"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
