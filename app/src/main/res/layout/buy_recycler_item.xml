<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="26dp"
    android:layout_margin="10dp"
    android:elevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageView_buy_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image" />

        <ImageView
            android:id="@+id/hotDealImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/featured_best_price"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading....."
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:visibility="gone"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewBSType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text=" in "/>
        <TextView
            android:id="@+id/textViewLandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading....."
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewBS_For"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading....."
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/textViewIsFeatured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading....."
        android:textSize="16sp"
        android:visibility="gone"
        android:padding="16dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewBS_Sub_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Loading..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"/>
        <TextView
            android:id="@+id/textViewBS_Sub_Type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textViewBS_Sub_Type"
            android:text="Loading..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingLeft="6dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"/>
            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading....."
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>

